{
  "manifest_version": 3,
  "name": "Blokátor prodejců na Aukro.cz",
  "version": "0.12",
  "description": "Rozšíření pro blokování nabídek vybraných prodejců na Aukro.cz",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://aukro.cz/*"],
      "js": ["content.js"]
    }
  ],
  "author": "Powerack",
  "homepage_url": "https://powerack.cz"
}
